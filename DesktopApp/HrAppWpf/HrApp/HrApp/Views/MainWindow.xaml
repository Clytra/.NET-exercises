<mah:MetroWindow x:Class="HrApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:HrApp"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Program Kadrowy" Height="450" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Dodaj pracownika" Height="25" Width="Auto" Margin="5" />
            <Button Content="Edytuj dane pracownika" Height="25" Width="Auto" Margin="5" />
            <Button Content="Zwolnij pracownika" Height="25" Width="Auto" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Filtruj:" Margin="5"/>
            <ComboBox Height="25" Width="150" Margin="5" />
        </StackPanel>
        <DataGrid Grid.Row="1" Margin="5"/>
    </Grid>
</mah:MetroWindow>
